{
  "name": "tms-backend",
  "version": "1.0.0",
  "author": "Sochukwuma Nwokoye",
  "license": "MIT",
  "description": "Tenant Management System Backend",
  "scripts": {
    "build:css": "npm-run-all --parallel build:tms build:dark-theme build:light-theme",
    "build:tms": "npx tailwindcss -i ./assets/sass/themes/tms.scss -o ./assets/dist/tms.css --minify",
    "build:dark-theme": "npx tailwindcss -i ./assets/sass/themes/dark-theme.scss -o ./assets/dist/dark-theme.css --minify",
    "build:light-theme": "npx tailwindcss -i ./assets/sass/themes/light-theme.scss -o ./assets/dist/light-theme.css --minify",
    "watch:css": "npm-run-all --parallel watch:tms watch:dark-theme watch:light-theme",
    "watch:tms": "npx tailwindcss -i ./assets/sass/themes/tms.scss -o ./assets/dist/tms.css --watch",
    "watch:dark-theme": "npx tailwindcss -i ./assets/sass/themes/dark-theme.scss -o ./assets/dist/dark-theme.css --watch",
    "watch:light-theme": "npx tailwindcss -i ./assets/sass/themes/light-theme.scss -o ./assets/dist/light-theme.css --watch",
    "dev": "npm run watch:css",
    "build": "npm run build:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "sass": "^1.86.3",
    "tailwindcss": "^3.3.5"
  }
}
